<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <<div class="container">
        <nav class="nav">

           <h1>ながのCAKE</h1>
             <ul class="nav ml-auto pull-right nav-pills">

              <% if admin_signed_in? %>

                <li class="nav-item">
                  <%= link_to '商品一覧', admin_items_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to '会員一覧', admin_customers_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to '注文履歴一覧', admin_orders_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'ジャンル一覧', admin_genres_path, class: 'nav-link' %>
                </li>
                <li>
                  <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link' %>
                </li>
              <% elsif customer_signed_in? %>
                <li class="nav-item">
                  <%= link_to 'マイページ', customers_path %>
                </li>
                <li class="nav-item">
                  <%= link_to '商品一覧', items_path %>
                </li>
                <li class="nav-item">
                  <%= link_to 'カート', cart_items_path %>
                </li>
                <li class="nav-item">
                  <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to 'About', about_path %>
                </li>
                <li class="nav-item">
                  <%= link_to '商品一覧', items_path %>
                </li>
                <li class="nav-item">
                  <%= link_to '新規登録', new_customer_registration_path %>
                </li>
                <li class="nav-item">
                  <%= link_to 'ログイン', new_customer_session_path %>
                </li>
               <% end %>
               </ul>

        </nav>
      </div>
    </header>

    <main>
     <%= yield %>
    </main>
  </body>
</html>
