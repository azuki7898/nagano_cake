<div class="container">

<h2>新規会員登録</h2>

<%= form_with model:@customer, id: 'new_customer', class: 'new_customer', url: customer_registration_path, local:true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :last_name, '名前'%><br>
    (姓)<%= f.text_field :last_name, class: 'form-control col-md-3'  %>
    (名)<%= f.text_field :first_name, class: 'form-control col-md-3' %>
  </div>

  <div class="form-group">
    <%= f.label :last_name_kana, 'フリガナ' %><br>
    (セイ)<%= f.text_field :last_name_kana, class: 'form-control col-md-3' %>
    (メイ)<%= f.text_field :first_name_kana, class: 'form-control col-md-3' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control col-md-3' %>
  </div>

  <div class="form-group">
    <%= f.label :postal_code, '郵便番号(ハイフンなし)' %>
    <%= f.text_field :postal_code, class: 'form-control col-md-3' %>
  </div>

  <div class="form-group">
    <%= f.label :address, '住所' %>
    <%= f.text_field :address, class: 'form-control col-md-6' %>
  </div>

  <div class="form-group">
    <%= f.label :telephone_number, '電話番号(ハイフンなし)' %>
    <%= f.text_field :telephone_number, class: 'form-control col-md-3' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control col-md-3' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control col-md-3' %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
</div>