<div class="container">
    <h4>注文情報登録</h4>
    <%= form_with url: orders_path, local:true do |f| %>
      <div>
        <h6>支払方法</h6>
        <%= f.radio_button :payment_method, value: 0 %>
        <%= f.label :payment_method, 'クレジットカード' %><br>
        <%= f.radio_button :payment_method, value: 1 %>
        <%= f.label :payment_method, '銀行振込' %>
      </div>

      <div>
        <h6>お届け先</h6>
        <div>
            <%= f.radio_button :address, value: 0 %>
            <%= f.label :address,'ご自身の住所' %><br>
            <%= @customer.postal_code %><%= @customer.address %><br>
            <%= @customer.last_name %><%= @customer.first_name %>
        </div>
        <div>
          <%= f.radio_button :address, value: 1 %>
          <%= f.label :address, '登録済みの住所から選択' %>
          <%= f.collection_select :address, Address.all, :id, :address, { include_blank: '選択してください' } %>
        </div>
        <div>
          <%= f.radio_button :address, value: 2 %>
          <%= f.label :address, '上記以外の住所' %><br>
          <%= f.label :postal_code, '郵便番号ハイフンなし' %>
          <%= f.text_field :postal_code %><br>
          <%= f.label :address, '住所' %>
          <%= f.text_field :address %><br>
          <%= f.label :name, '宛先' %>
          <%= f.text_field :name %>
        </div>
      </div>
    <% end %>
</div>
