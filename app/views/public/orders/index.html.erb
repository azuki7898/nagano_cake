<div class="container">
  <div class="col-md-8">
    <h4>注文履歴一覧</h4>
    <table class="table table-bordered">
      <thead>
        <tr>
          <td>注文日</td>
          <td>配送先</td>
          <td>注文商品</td>
          <td>支払金額</td>
          <td>ステータス</td>
          <td>注文詳細</td>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td>
            <%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %>
            <% end %>
          </td>
          <td><%= order.order_details.tax_price %></td>
          <td><%= order.is_active_i18n %></td>
          <td><%= link_to '表示する', order_path(order) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>