<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <%= render 'public/homes/genre', genres: @genres %>
    </div>
    <div class="col-lg-5">
      <%= attachment_image_tag @item, :image, :fill, 200, 200, fallback: 'no_image.jpg' %>
    </div>
    <div class="col-lg-5">
      <p><%= @item.name %></p>
      <p><%= @item.introduction %></p>
      <p><%= (@item.price * 1.1).round.to_s(:delimited) %>円(税込)</p>
      <%= form_with model:@cart_item, url: cart_items_path, local:true do |f| %>
      <%= f.hidden_field :item_id %>
      <%= f.select :amount, { '1個': 1, '2個': 2, '3個': 3, '4個': 4, '5個': 5 }, { include_blank: '個数選択' } %>
      <%= f.submit 'カートに入れる' %>
      <% end %>
    </div>
  </div>
</div>