<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <%= render 'public/homes/genre', genres: @genres %>
    </div>
    <div class="col-lg-10">
      <h4>商品一覧</h4>
      <div>
      <% @items.each do |item| %>
        <%= link_to item_path(item) do %>
        <%= attachment_image_tag item, :image, :fill, 100, 100, fallback: 'no_image.jpg' %>
        <% end %>
        <%= item.name %>
        ￥<%= item.price %>
      <% end %>
      </div>
    </div>
  </div>
</div>