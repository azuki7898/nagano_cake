  <div class="container">


        <h2>登録情報変更</h2>
        <div class="col-xs-12">
          <%= form_with model:@customer, url: customer_path, local:true do |f| %>
          <div class="form-group">
              <%= f.label :last_name, '氏名', class: 'control-label' %><br>
              (姓)<%= f.text_field :last_name, class: 'form-control col-md-3' %>
              (名)<%= f.text_field :first_name, class: 'form-control col-md-3' %>
          </div>
          <div class="form-group">
            <%= f.label :last_name_kana, 'フリガナ' %><br>
            (セイ)<%= f.text_field :last_name_kana, class: 'form-control col-md-3' %>
            (メイ)<%= f.text_field :first_name_kana, class: 'form-control col-md-3' %>
          </div>
          <div class="form-group">
            <%= f.label :postal_code, '郵便番号' %>
            <%= f.text_field :postal_code, class: 'form-control col-md-3' %>
          </div>
          <div class="form-group">
            <%= f.label :address, '住所' %>
            <%= f.text_field :address, class: 'form-control col-md-3' %>
          </div>
          <div class="form-group">
            <%= f.label :telephone_number, '電話番号' %>
            <%= f.text_field :telephone_number, class: 'form-control col-md-3' %>
          </div>
          <div class="form-group">
            <%= f.label :email, 'メールアドレス' %>
            <%= f.text_field :email, class: 'form-control col-md-3' %>
          </div>
          <%= f.submit '変更を保存する' %>
          <% end %>
          <%= link_to '退会する', customers_unsubscribe_path %>
        </div>
  </div>