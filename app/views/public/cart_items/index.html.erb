<h4>ショッピングカート</h4>
<table class="table table-bordered">
  <thead>
    <tr>
      <td>商品名</td>
    　<td>単価(税込)</td>
    　<td>数量</td>
    　<td>小計</td>
    　<td></td>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>

    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= (cart_item.item.price * 1.1).round.to_s(:delimited) %></td>
      <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
      <td>
        <%= f.select :amount, { '1個': 1, '2個': 2, '3個': 3, '4個': 4, '5個': 5 }, {selected: cart_item.amount} %>
        <%= f.submit '変更する' %>
      </td>
      <% end %>
      <td><%= ((cart_item.item.price * cart_item.amount) * 1.1).round.to_s(:delimited) %></td>
      <td><%= link_to '削除する', cart_item_path(cart_item), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>