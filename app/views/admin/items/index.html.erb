<h3>商品一覧</h3>
<div class="text-right">
  <%= link_to '商品追加', new_admin_item_path %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <th><%= item.id %></th>
      <th><%= link_to item.name, admin_item_path(item) %></th>
      <th><%= item.price %>円</th>
      <th><%= item.genre.name %></th>
      <th><%= item.is_active ? '販売中' : '販売停止' %></th>
    </tr>
    <% end %>
  </tbody>
</table>
