<div class="container">
<div class="row">
<h3>商品詳細</h3>
<div class="col-xs-4">
  <%= attachment_image_tag @item, :image, :fill, 200, 200, fallback: 'no_image.jpg' %>
</div>
<div class="col-xs-6 col-xs-offset-1">
<table class="table">
  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <td>商品説明</td>
    <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <td>ジャンル</td>
    <td><%= @item.genre.name %></td>
  </tr>
  <tr>
    <td>税込価格</td>
    <td><%= (@item.price * 1.1).round.to_s %>円</td>
  </tr>
  <tr>
    <td>販売ステータス</td>
    <td><%= @item.is_active %></td>
  </tr>
</table>
<%= link_to '編集する', edit_admin_item_path %>
</div>
</div>
</div>