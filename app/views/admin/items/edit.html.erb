<h3>商品詳細</h3>
<%= form_with model:@item, url:admin_item_path, local:true do |f| %>
<div>
  <%= f.label :image, '商品画像' %>
  <%= f.attachment_field :image %>
</div>
<div>
  <%= f.label :name, '商品名' %>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :introduction, '商品説明' %>
  <%= f.text_area :introduction %>
</div>
<div>
  <%= f.label :genre_id, 'ジャンル' %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, { include_blank: '選択してください'} %>
</div>
<div>
  <%= f.label :price, '税抜価格' %>
  <%= f.text_field :price %>
</div>
<div>
  <%= f.label :is_active, '販売ステータス' %>
   <%= f.radio_button :is_active, :true, value: 1 %>
   <%= f.label :is_active, '販売中' %>
   <%= f.radio_button :is_active, value: 2 %>
   <%= f.label :is_active, '販売停止' %>
</div>
<div>
  <%= f.submit '商品編集' %>
</div>
<% end %>