<h3><%= @customer.first_name %>さんの会員情報編集</h3>
<div>
  <span>会員ID</span>
  <%= @customer.id %>
</div>
<%= form_with model:@customer, url: admin_customer_path, local:true do |f| %>
<div>
  <%= f.label :last_name, '氏名' %>
  <%= f.text_field :last_name %>
  <%= f.text_field :first_name %>
</div>
<div>
  <%= f.label :last_name_kana, 'フリガナ' %>
  <%= f.text_field :last_name_kana %>
  <%= f.text_field :first_name_kana %>
</div>
<div>
  <%= f.label :postal_code, '郵便番号' %>
  <%= f.text_field :postal_code %>
</div>
<div>
  <%= f.label :telephone_number, '電話番号' %>
  <%= f.text_field :telephone_number %>
</div>
<div>
  <%= f.label :email, 'メールアドレス' %>
  <%= f.text_field :email %>
</div>
<div>
  <%= f.label :is_active, '会員ステータス' %>
  <%= f.radio_button :is_active, :true, value: 1 %>
  <%= f.label :is_active, '有効' %>
  <%= f.radio_button :is_active, value: 2 %>
  <%= f.label :is_active, '退会' %>
</div>
<%= f.submit '変更を保存' %>
<% end %>