
      <h3>注文履歴一覧</h3>
      <table class="table">
        <thead>
          <tr>
            <td>購入日時</td>
            <td>購入者</td>
            <td>注文個数</td>
            <td>注文ステータス</td>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.customer.created_at %></td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td><%= order.order_details.sum(:quantity) %></td>
            <td><%= order.is_active %> </td>
          </tr>
          <% end %>
        </tbody>
      </table>