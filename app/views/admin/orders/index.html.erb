<h3>注文履歴一覧</h3>
<table>
  <thead>
    <tr>
      <td>購入日時</td>
      <td>購入者</td>
      <td>注文個数</td>
      <td>注文ステータス</td>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.created_at %></td>
      <td><%= customer.last_name %><%= customer.first_name %></td>
      <td>注文個数</td>
      <td>注文ステータス</td>
    </tr>
    <% end %>
  </tbody>
</table>